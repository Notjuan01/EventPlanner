@page
@model EventPlanner.Pages.Participantes.CreateModel
@{
    ViewData["Title"] = "Create Participante";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">Crear nuevo participante</h1>
    <h4 class="text-center text-secondary">Por favor complete el formulario a continuación</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Participantes.Nombre" class="control-label">Nombre</label>
                    <input asp-for="Participantes.Nombre" class="form-control" placeholder="Ingresar nombre del participante" />
                    <span asp-validation-for="Participantes.Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Participantes.Apellido" class="control-label">Apellido</label>
                    <input asp-for="Participantes.Apellido" class="form-control" placeholder="ingresar apellido del participante" />
                    <span asp-validation-for="Participantes.Apellido" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Participantes.Email" class="control-label">Email</label>
                    <input asp-for="Participantes.Email" class="form-control" placeholder="ingresar email del participante" />
                    <span asp-validation-for="Participantes.Email" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Participantes.Telefono" class="control-label">Telefono</label>
                    <input asp-for="Participantes.Telefono" class="form-control" placeholder="ingresar telefono del participante" />
                    <span asp-validation-for="Participantes.Telefono" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 d-flex justify-content-between">
                    <input type="submit" value="Create event" class="btn btn-success" />
                    <a asp-page="Index" class="btn btn-outline-primary">Volver atras</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}