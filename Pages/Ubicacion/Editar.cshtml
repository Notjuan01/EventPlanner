@page
@model EventPlanner.Pages.Ubicacion.EditarModel
@{
}

<h1>Editar ubicacion</h1>

<h4>Detalles de la ubicacion</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <input type="hidden" asp-for="Ubicacion.Id" />


            <div class="form-group">
                <label asp-for="Ubicacion.NombreUbicacion" class="control-label"></label>
                <input asp-for="Ubicacion.NombreUbicacion" class="form-control" placeholder="Ingresar nombre de la ubicacion" />
                <span asp-validation-for="Ubicacion.NombreUbicacion" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Ubicacion.Capacidad" class="control-label"></label>
                <textarea asp-for="Ubicacion.Capacidad" class="form-control" placeholder="Ingresar capacidad de la ubicacion" rows="3"></textarea>
                <span asp-validation-for="Ubicacion.Capacidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ubicacion.Direccion" class="control-label"></label>
                <textarea asp-for="Ubicacion.Direccion" class="form-control" placeholder="Ingresar direccion de la ubicacion" rows="3"></textarea>
                <span asp-validation-for="Ubicacion.Direccion" class="text-danger"></span>
            </div>


            <div class="form-group d-flex justify-content-between">
                <input type="submit" value="Guardar cambios" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Volver atras</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}