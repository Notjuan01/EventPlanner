@page
@model EventPlanner.Pages.Ubicacion.CreateModel
@{
}

<div class="container mt-5">
    <h1 class="text-center text-primary">Crear nueva ubicacion</h1>
    <h4 class="text-center text-secondary">Por favor complete el formulario a continuación</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Ubicacion.NombreUbicacion" class="control-label">Nombre de la ubicacion</label>
                    <input asp-for="Ubicacion.NombreUbicacion" class="form-control" placeholder="Ingresar el nombre de la ubicacion" />
                    <span asp-validation-for="Ubicacion.NombreUbicacion" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Ubicacion.Capacidad" class="control-label">Capacidad</label>
                    <input asp-for="Ubicacion.Capacidad" class="form-control" placeholder="Ingresar capacidad de la ubicacion" />
                    <span asp-validation-for="Ubicacion.Capacidad" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Ubicacion.Direccion" class="control-label">Direccion</label>
                    <input asp-for="Ubicacion.Direccion" class="form-control" placeholder="Ingresar direccion de la ubicacion" />
                    <span asp-validation-for="Ubicacion.Direccion" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 d-flex justify-content-between">
                    <input type="submit" value="Create event" class="btn btn-success" />
                    <a asp-page="Index" class="btn btn-outline-primary">Volver atras</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}