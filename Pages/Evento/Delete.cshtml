@page
@model EventPlanner.Pages.Evento.DeleteModel
@{
    ViewData["Title"] = "Delete Event";
}
<div class="container mt-5">
    <h1 class="text-center text-danger">Eliminar evento</h1>
    <h3 class="text-center text-warning">¿Estás seguro de que deseas eliminar este evento?</h3>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="alert alert-warning" role="alert">
                <strong>Advertencia!</strong> Esta acción no se puede deshacer.
            </div>

            <h4 class="text-center">Detalles del evento</h4>
            <dl class="row">
                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Evento1.EventoName)</dd>

                <dt class="col-sm-4">Descripcion</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Evento1.EventoDescription)</dd>

                <dt class="col-sm-4">Fecha de inicio</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Evento1.FechaInicio)</dd>

                <dt class="col-sm-4">Fecha final</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Evento1.FechaFin)</dd>

                <dt class="col-sm-4">Id ubicacion</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Evento1.IdUbicacion)</dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Evento1.Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger btn-lg">Eliminar</button>
                    <a asp-page="./Index" class="btn btn-outline-primary btn-lg">Volver atras</a>
                </div>
            </form>
        </div>
    </div>
</div>