@page
@model EventPlanner.Pages.Evento.CreateModel
@{
    ViewData["Title"] = "Create Event";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">Crear nuevo evento</h1>
    <h4 class="text-center text-secondary">Por favor complete el formulario a continuación</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Evento.EventoName" class="control-label">Nombre</label>
                    <input asp-for="Evento.EventoName" class="form-control" placeholder="Ingresar nombre del evento" />
                    <span asp-validation-for="Evento.EventoName" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Evento.EventoDescription" class="control-label">Descripcion</label>
                    <input asp-for="Evento.EventoDescription" class="form-control" placeholder="ingresar descripcion del evento" />
                    <span asp-validation-for="Evento.EventoDescription" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Evento.FechaInicio" class="control-label">Fecha de inicio</label>
                    <input asp-for="Evento.FechaInicio" class="form-control" placeholder="ingresar fecha del inicio" />
                    <span asp-validation-for="Evento.FechaInicio" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Evento.FechaFin" class="control-label">Fecha final</label>
                    <input asp-for="Evento.FechaFin" class="form-control" placeholder="ingresar fecha final" />
                    <span asp-validation-for="Evento.FechaFin" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Evento.IdUbicacion" class="control-label">Id ubicacion</label>
                    <input asp-for="Evento.IdUbicacion" class="form-control" placeholder="Ingresar id ubicacion" />
                    <span asp-validation-for="Evento.IdUbicacion" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 d-flex justify-content-between">
                    <input type="submit" value="Create event" class="btn btn-success" />
                    <a asp-page="Index" class="btn btn-outline-primary">Volver atras</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
