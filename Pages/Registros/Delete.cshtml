@page
@model EventPlanner.Pages.Registros.DeleteModel
@{
}

<div class="container mt-5">
    <h1 class="text-center text-danger">Eliminar registro</h1>
    <h3 class="text-center text-warning">¿Estás seguro de que deseas eliminar este registro?</h3>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="alert alert-warning" role="alert">
                <strong>Advertencia!</strong> Esta acción no se puede deshacer.
            </div>

            <h4 class="text-center">Detalles del registro</h4>
            <dl class="row">
                <dt class="col-sm-4">Id evento</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Registros.IdEvento)</dd>

                <dt class="col-sm-4">Id Participante</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Registros.IdParticipante)</dd>

                <dt class="col-sm-4">Fecha de registro</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Registros.FechaRegistro)</dd>


            </dl>

            <form method="post">
                <input type="hidden" asp-for="Registros.Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger btn-lg">Eliminar</button>
                    <a asp-page="./Index" class="btn btn-outline-primary btn-lg">Volver atras</a>
                </div>
            </form>
        </div>
    </div>
</div>